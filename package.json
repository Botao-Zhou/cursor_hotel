{
  "name": "yisu-hotel",
  "version": "1.0.0",
  "description": "易宿酒店预订平台 - 智慧出行酒店预订",
  "private": true,
  "scripts": {
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:3001": "concurrently \"npm run dev:frontend:3001\" \"npm run dev:backend:3001\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:frontend:3001": "cross-env VITE_BACKEND_PORT=3001 npm run dev:frontend",
    "dev:backend": "cd backend && npm run dev",
    "dev:backend:3001": "cross-env PORT=3001 npm run dev:backend",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
